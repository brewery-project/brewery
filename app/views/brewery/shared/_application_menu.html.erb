<div class="navbar">
	<div class="navbar-inner">
		<%= link_to I18n.t('global.app_name'), main_app.root_path, class: 'brand' %>

		<ul class="nav">
			<li><%= link_to t('global.home'), main_app.root_path %></li>

			<% if current_user %>
				<li><%= link_to 'Admin', brewery.admin_path %></li>
			<% end %>
		</ul>

		<% if current_user %>
			<ul class="nav pull-right">
				<li><%= link_to current_user.display_name, brewery.auth_core_users_path %></li>
				<li class="divider"></li>
				<li><%= link_to t('brewery.auth_core.session.logout'), brewery.auth_core_logout_path %></li>
			</ul>
		<% else %>
			<ul class="nav pull-right">
				<li><%= link_to t('brewery.auth_core.sessions.login'), brewery.auth_core_login_path %></li>
				<li><%= link_to t('brewery.auth_core.users.signup'), brewery.new_auth_core_users_path %></li>
			</ul>
		<% end %>
	</div>
</div>